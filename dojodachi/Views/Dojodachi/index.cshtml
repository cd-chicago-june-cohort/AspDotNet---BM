<html>
    <head>
        <meta charset='utf-8'>
        
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        
        <link rel="stylesheet" href="https://bootswatch.com/simplex/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/styles.css">

        <title>Dojodachi - Your only friend.</title>
    </head>
    <body>
        <div class="container">

            <div class="jumbotron col-centered">
                <h1>Dojodachi</h1>
                <h3>Probably your only friend.</h3>
            </div>

            <div class="row dojodachi">
                <div class="col-xs-3">
                    <p>Fullness: @ViewBag.fullness</p>
                </div>
                <div class="col-xs-3">
                    <p>Happiness: @ViewBag.happiness</p>
                </div>
                <div class="col-xs-3">
                    <p>Meals: @ViewBag.meals</p>  
                </div>
                <div class="col-xs-3">
                    <p>Energy: @ViewBag.energy</p>
                </div>
            </div> 
            <div class="row msg">
                <div class="col-xs-12">
                    <p>@ViewBag.msg</p>
                </div>
            </div>   
            <div class="row">
                <div class="col-xs-3">
                    <a href = '/eat'><button class="btn btn-success">Eat</button></a>
                </div>
                <div class="col-xs-3">
                    <a href = '/play'><button class="btn btn-info">Play</button></a>
                </div>
                <div class="col-xs-3">
                    <a href = '/work'><button class="btn btn-warning">Work</button></a>
                </div>
                <div class="col-xs-3">
                    <a href = '/sleep'><button class="btn btn-danger">Sleep</button></a>
                </div>
            </div>
            <div class="col-xs-12">
                <a href = '/reset'><button class="btn btn-primary reset">Restart</button></a>
            </div>
        </div>
    </body>
</html>