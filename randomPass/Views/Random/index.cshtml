<html>
    <head>
        <meta charset='utf-8'>
        
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        
        <link rel="stylesheet" href="https://bootswatch.com/simplex/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/styles.css">

        <title>Random Passcode v 1.1</title>
    </head>
    <body>
        <div class="container">

            <div class="jumbotron col-centered">
                <h1>Random Passcode v 1.3 beta, LLC.</h1>
            </div>

            <div class="col-xs-6 col-centered">
                <h3>Random passcode (passcode # @ViewBag.counter)</h3>
            </div>

            <div class="col-xs-6 col-centered">
                <h1 class="codebox">@ViewBag.passcode</h1>
            </div>

            <div class="col-xs-6 col-centered inline">
                <!-- <form action="/generate"> -->
                <form action="/generate">
                    <input type="submit" value="generate" class="button" id="generate">
                </form>

                <!-- </form> -->
                <form action="/reset">
                    <input type="submit" value="reset" class="button" id="reset">
                </form>
                
            </div>
        </div>
    </body>
</html>

